# Configuration pour le build
[build]
  # Dossier à publier. Le point "." signifie le dossier racine du projet.
  publish = "./"
  # Aucune commande de build n'est nécessaire car c'est un site statique.
  command = ""

# Règle de redirection pour les applications à page unique (SPA)
# Cela garantit que même si l'utilisateur rafraîchit une "page", il revient bien à l'index.html
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
